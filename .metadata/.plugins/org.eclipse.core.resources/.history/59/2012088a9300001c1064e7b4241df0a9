package com.seleniun.framework.pages;

import static org.testng.Assert.assertEquals;
import static org.testng.Assert.assertTrue;
import org.apache.log4j.Logger;
import org.apache.log4j.chainsaw.Main;
import org.openqa.selenium.By;


import com.selenium.framework.libraries.seleniumBase;
import com.selenium.framework.libraries.seleniumLibrary;


public class HP1Main extends seleniumBase {
	//This Class should Include Any "Locators + drivers + Webelements" BUT no testing Annotations!!

	final static Logger logger = Logger.getLogger(HP1Main.class);
	public String url = "http://automationpractice.com/index.php";
	seleniumLibrary library = new seleniumLibrary();

	public HP1Main() {	
		try {
	    logger.info("Step 3 : Getting URL & Comparing Actual/Expected URL ");
		driver.get(url);
		String actualUrl = driver.getTitle();
		String expectedUrl = "http://automationpractice.com/index.php";
		assertEquals(actualUrl, expectedUrl);
		
		}catch (Exception e) {//catch any error
			logger.error("Error: ", e );//Ensure save log for whatever in LOG File!
		    assertTrue(false); //Stop Whole test to see where is issue if any ! 
		}
	}
	
	public HP2Authentication pressSignIn () {
		logger.info("Step 4 : Clicking Signin link || diverting to our HTML 2nd Page-->  Authentication Page ");
		library.clickAnyLink(By.partialLinkText("Sign"));
		return new HP2Authentication();
	}
	
	
}


